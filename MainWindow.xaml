<Window x:Class="UniformGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniformGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--gridden farklı içine konan araçların boyu birbiri ile eşit olur  -->
    <!--hepsiyle aynı genişlik ve yüksekliği verir-->
    <!--belirlenene satıra göre konumlandırır aynı derecede böler-->
    <!--belirlenen satır ve sütunlar dışında eleman koyamaz-->
    <UniformGrid Rows="2" Columns="3">
        <Button Content="Başla" />
        <Button Content="Başla2" />
        <Button Content="Başla3" />
        <Button Content="Başla4" />
        <Button Content="Başla5" />
        <Button Content="Başla6" />
        <Button Content="Başla7" />
        <Button Content="Başla8" />
        <Button Content="Başla9" />
    </UniformGrid>
</Window>
